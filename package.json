{
  "name": "@rweich/streamdeck-datetime",
  "version": "0.0.0-development",
  "description": "a simple datetime plugin for the elgato streamdeck",
  "private": true,
  "author": "rweich",
  "license": "MIT",
  "scripts": {
    "build": "yarn clean && webpack --mode=development",
    "build-prod": "yarn clean && webpack --mode=production",
    "ci": "yarn type-check && yarn lint && yarn set-plugin-version 0.0.0",
    "clean": "rimraf ./dist/*",
    "lint": "eslint 'src/**/*.ts'",
    "prepare": "husky install",
    "set-plugin-version": "ts-node build/scripts/set-plugin-version.ts",
    "type-check": "tsc --noEmit",
    "update-template": "update-template https://github.com/rweich/streamdeck-ts-template",
    "watch": "webpack watch --mode=development"
  },
  "dependencies": {
    "@rweich/streamdeck-formbuilder": "^1.0.0",
    "@rweich/streamdeck-ts": "^2.1.1",
    "dayjs": "^1.10.6",
    "eventemitter3": "^4.0.7",
    "ts-type-guards": "^0.7.0"
  },
  "devDependencies": {
    "@amille/semantic-release-plugins": "^3.3.5",
    "@babel/cli": "^7.14.8",
    "@babel/core": "^7.15.0",
    "@babel/plugin-proposal-class-properties": "^7.8.3",
    "@babel/preset-env": "^7.15.0",
    "@babel/preset-typescript": "^7.15.0",
    "@commitlint/cli": "^13.1.0",
    "@commitlint/config-conventional": "^13.1.0",
    "@rweich/eslint-config": "^1.1.2",
    "@rweich/prettier-config": "^1.0.2",
    "@semantic-release/changelog": "^5.0.1",
    "@semantic-release/exec": "^5.0.0",
    "@semantic-release/git": "^9.0.0",
    "@types/copy-webpack-plugin": "^8.0.1",
    "@types/jsonfile": "^6.0.1",
    "babel-loader": "^8.2.2",
    "conventional-changelog-conventionalcommits": "^4.6.0",
    "copy-webpack-plugin": "^9.0.1",
    "css-loader": "^6.2.0",
    "husky": "^7.0.1",
    "jsonfile": "^6.1.0",
    "lint-staged": "^11.1.2",
    "rimraf": "^3.0.2",
    "semantic-release": "^17.4.4",
    "style-loader": "^3.2.1",
    "ts-node": "^10.1.0",
    "typescript": "^4.3.5",
    "update-template": "^1.3.1",
    "webpack": "^5.49.0",
    "webpack-cli": "^4.3.0"
  },
  "engines": {
    "node": ">=12.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rweich/streamdeck-datetime.git"
  },
  "bugs": "https://github.com/rweich/streamdeck-datetime/issues",
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "eslintConfig": {
    "extends": "@rweich"
  },
  "lint-staged": {
    "{src,test}/**/*.ts": [
      "prettier --write",
      "eslint --quiet --fix"
    ]
  },
  "prettier": "@rweich/prettier-config"
}
